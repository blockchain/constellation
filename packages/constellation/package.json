    "@radix-ui/react-toggle": "0.1.3",
    "@radix-ui/react-toggle-group": "0.1.3",
    "@radix-ui/react-tooltip": "0.1.3",
    "tailwindcss-radix": "^2.3.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "yarn test --bail --findRelatedTests",
      "stylelint './src/**/*.{js,ts,tsx}'"
    ]
  }
