{
  "name": "@blockchain-com/constellation",
  "version": "0.0.35",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "rimraf dist && rollup -c",
    "lint:css": "stylelint --cache \"./src/**/*.{js,ts,tsx}\"",
    "lint:js": "eslint --cache \"./src/**/*.{js,ts,tsx}\"",
    "lint:staged": "lint-staged",
    "build:storybook": "build-storybook",
    "deploy:storybook": "yarn build:storybook && storybook-to-ghpages --existing-output-dir=./storybook-static",
    "storybook": "start-storybook -p 9009",
    "tailwind:watch": "npx tailwindcss -i ./src/input.css -o ./src/components/ThemeProvider/styles.css --watch",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:fix": "yarn lint:js --fix && yarn lint:css --fix",
    "test": "jest",
    "prepare": "cd .. && husky install constellation/.husky",
    "analyze_bundle:open": "yarn build --analyze_bundle",
    "analyze_bundle:json": "yarn build --analyze_bundle_json"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.14.8",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.8",
